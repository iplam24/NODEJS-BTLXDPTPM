<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Panel</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
  <link rel="icon" href="/image/Vinfast-logo.png" type="image/png">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    body {
      display: flex;
      height: 100vh;
      background-color: #f0f0f0;
      font-family: Arial, sans-serif;
    }
    .sidebar {
      width: 250px;
      background-color: #222;
      color: #fff;
      transition: width 0.3s;
      overflow: hidden;
    }
    .sidebar.collapsed {
      width: 60px;
    }
    .sidebar-header {
      display: flex;
      align-items: center;
      padding: 15px;
      background-color: #111;
    }
    .sidebar-header h2 {
      font-size: 20px;
      margin-left: 10px;
      transition: opacity 0.3s;
    }
    .sidebar.collapsed .sidebar-header h2 {
      opacity: 0;
    }
    .toggle-btn {
      background-color: transparent;
      border: none;
      color: #fff;
      font-size: 24px;
      cursor: pointer;
      transition: transform 0.3s;
    }
    .toggle-btn:focus {
      outline: none;
    }
    .sidebar ul {
      list-style: none;
      margin-top: 10px;
    }
    .sidebar ul li {
      padding: 15px;
      transition: background-color 0.3s;
    }
    .sidebar ul li a {
      color: #fff;
      display: flex;
      align-items: center;
      text-decoration: none;
    }
    .sidebar ul li a i {
      width: 30px;
      text-align: center;
      font-size: 18px;
    }
    .sidebar ul li a span {
      margin-left: 10px;
      transition: opacity 0.3s;
    }
    .sidebar.collapsed ul li a span {
      opacity: 0;
    }
    .sidebar ul li:hover {
      background-color: #444;
    }
    /* Content */
.content {
    flex: 1;
    padding: 20px;
    transition: all 0.3s ease;
    width: calc(100% - 250px); /* Khi sidebar chưa thu nhỏ */
}

.sidebar.collapsed ~ .content {
    width: calc(100% - 60px); /* Khi sidebar thu nhỏ */
}
  </style>
</head>
<body>
  <div class="sidebar" id="sidebar">
    <div class="sidebar-header">
      <button class="toggle-btn" id="toggleBtn"><i class="fas fa-bars"></i></button>
      <h2>Admin Panel</h2>
    </div>
    <ul>
      <li><a href="index.html"><i class="fas fa-tachometer-alt"></i><span> Dashboard</span></a></li>
      <li><a href="/admin/car"><i class="fas fa-car"></i><span> Quản lý xe</span></a></li>
      <li><a href="/admin/detail"><i class="fas fa-car"></i><span> Chi tiet xe</span></a></li>
      <li><a href="/src/views/admin/orders.html"><i class="fas fa-shopping-cart"></i><span> Quản lý đơn hàng</span></a></li>
      <li><a href="/admin/account"><i class="fas fa-users"></i><span> Quản lý tài khoản</span></a></li>
      <li><a href="/src/views/admin/staff.html"><i class="fa-solid fa-user"></i><span> Quản lý nhân sự</span></a></li>
      <li><a href="/src/views/payments.html"><i class="fa-solid fa-credit-card"></i><span> Quản lý thanh toán</span></a></li>
      <li><a href="/src/views/reports.html"><i class="fa-solid fa-square-poll-vertical"></i><span> Báo cáo</span></a></li>
      <li><a href="#"><i class="fas fa-cog"></i><span> Cài đặt</span></a></li>
      <li><a href="#"><i class="fas fa-sign-out-alt"></i><span> Đăng xuất</span></a></li>
    </ul>
  </div>
  <div class="content" id="content">
    <div id="modalForm1" class="modal">
      <div class="register-container">
          <span class="closeModal1 close">&times;</span>
          <h2>Sua Thong Tin Xe</h2>
          <form action="/admin/updateCar" class="signup-form" method="post" enctype="multipart/form-data">
              <label>ID</label>
              <div class="inputForm">
                  <input type="text" class="input" placeholder="Nhập vào ID xe" name="carID" value="<%=car.Car_ID%>" readonly>
              </div>
  
              <label>Tên xe</label>
              <div class="inputForm">
                  <input type="text" class="input" placeholder="Nhập vào tên xe" name="model" value="<%=car.Model%>">
                  <span class="togglePassword"></span>
              </div>
  
              <label>Phiên bản</label>
              <div class="inputForm">
                  <input type="text" class="input" placeholder="Nhập vào phiên bản xe" name="version" value="<%=car.Version%>">
                  <span class="togglePassword"></span>
              </div>
  
              <label>Giá</label>
              <div class="inputForm">
                  <input type="text" class="input" placeholder="Nhập vào giá" name="price" value="<%=car.Price%>">
              </div>
  
              <label>Màu sắc</label>
              <div class="inputForm">
                  <input type="text" class="input" placeholder="Nhập vào màu sắc" name="color" value="<%=car.Color%>">
              </div>

              <label>Động cơ</label>
              <div class="inputForm">
                  <select name="engine">
                      <option value="xang">Động cơ xăng</option>
                      <option value="dien">Động cơ điện</option>
                      <option value="khac">Loại khác</option>
                  </select>
                  <!-- <input type="text" class="input" placeholder="Nhập vào loại động cơ" name="engine"> -->
              </div>

              <label>Công suất tối đa(kw)</label>
              <div class="inputForm">
                  <input type="text" class="input" placeholder="Nhập vào công suất tối đa" name="capkw" value="<%=car.Cap_KW%>">
              </div>

              <label>Mô men xoắn cực đại</label>
              <div class="inputForm">
                  <input type="text" class="input" placeholder="Nhập vào mô men xoắn cực đaị" name="torquenm" value="<%=car.Torque_NM%>">
              </div>

              <label>Tăng tốc</label>
              <div class="inputForm">
                  <input type="text" class="input" placeholder="Nhập vào thời gian tăng tốc (Từ 0-100km/h)" name="accel" value="<%=car.Accel%>">
              </div>

              <label>Quãng đường / lần sạc</label>
              <div class="inputForm">
                  <input type="text" class="input" placeholder="Nhập vào quãng đường di chuyển / lần sạc" name="rangekm" value="<%=car.Range_KM%>">
              </div>

              <label>Thời gian nạp pin nhanh nhất</label>
              <div class="inputForm">
                  <input type="text" class="input" placeholder="Nhập vào thời gian sạc" name="fastcharge" value="<%=car.FastCharge%>">
              </div>

              <label>Dẫn động</label>
              <div class="inputForm">
                  <input type="text" class="input" placeholder="Nhập vào dẫn động xe" name="drivertrain" value="<%=car.Drivertrain%>">
              </div>
              <label>Hình ảnh</label>
              <td style="display: flex;">
                <% if (car.ImageFolder) { %>
                    <% JSON.parse(car.ImageFolder).forEach(img => { %>
                        <img src="<%= img %>" width="100" alt="Ảnh xe">
                    <% }) %>
                <% } else { %>
                    <p>Không có ảnh</p>
                <% } %>
            </td>
              <div class="inputForm">
                  <input type="file" class="input" placeholder="Nhập vào dẫn động xe" name="carImages"  multiple>
              </div>

              <div class="inputForm">
                  <button class="button-submitt">Cập nhật</button>
          </form>
      </div>
  </div>
</div>

<div id="modalForm2" class="modal2">
  <div class="register-container">
      <span class="closeModal2 close">&times;</span>
      <h2>Thêm chi tiết xe</h2>
      <form action="/admin/update-detail" method="post">
      <label>Ma xe</label>
      <div class="inputForm">
          <input type="text" class="input" placeholder="Nhập vào tiêu đề 1" name="carID" value="<%=detail.Car_ID%>" readonly>
      </div>
      <label>Tile 1</label>
      <div class="inputForm">
          <input type="text" class="input" placeholder="Nhập vào tiêu đề 1" name="title1" value="<%=detail.Title1%>">
      </div>

      <label>Describe 1</label>
      <div class="inputForm">
          <input type="text" class="input" placeholder="Nhập vào mô tả 1" name="ds1" value="<%=detail.Describe1%>">
      </div>

      <label>Tile 2</label>
      <div class="inputForm">
          <input type="text" class="input" placeholder="Nhập vào tiêu đề 2" name="title2" value="<%=detail.Title2%>">
      </div>

      <label>Describe 2</label>
      <div class="inputForm">
          <input type="text" class="input" placeholder="Nhập vào mô tả 2" name="ds2" value="<%=detail.Describe2%>">
      </div>

      <label>Tile 3</label>
      <div class="inputForm">
          <input type="text" class="input" placeholder="Nhập vào tiêu đề 3" name="title3" value="<%=detail.Title3%>">
      </div>

      <label>Describe 3</label>
      <div class="inputForm">
          <input type="text" class="input" placeholder="Nhập vào mô tả 3" name="ds3" value="<%=detail.Describe3%>">
      </div>

      <label>Tile 4</label>
      <div class="inputForm">
          <input type="text" class="input" placeholder="Nhập vào tiêu đề 4" name="title4" value="<%=detail.Title4%>">
      </div>

      <label>Describe 4</label>
      <div class="inputForm">
          <input type="text" class="input" placeholder="Nhập vào mô tả 4" name="ds4" value="<%=detail.Describe4%>">
      </div>

      <label>Tile 5</label>
      <div class="inputForm">
          <input type="text" class="input" placeholder="Nhập vào tiêu đề 5" name="title5" value="<%=detail.Title5%>">
      </div>

      <label>Describe 5</label>
      <div class="inputForm">
          <input type="text" class="input" placeholder="Nhập vào mô tả 5" name="ds5" value="<%=detail.Describe5%>">
      </div>

      <button>Cập nhật</button>
  </form>
  </div>
  </div>

  <script>
    // Nút mở/đóng sidebar
    document.getElementById('toggleBtn').addEventListener('click', function() {
      document.getElementById('sidebar').classList.toggle('collapsed');
    });

    // Lắng nghe sự kiện click vào các liên kết trong menu
    // Lắng nghe sự kiện click vào các liên kết trong menu
    document.querySelectorAll('.sidebar ul li a').forEach(link => {
    link.addEventListener('click', function(e) {
        e.preventDefault(); // Ngăn chặn load trang

        let pageUrl = this.getAttribute('href');

        if (pageUrl !== "#") {
            fetch(pageUrl)
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Lỗi khi tải trang');
                    }
                    return response.text();
                })
                .then(data => {
                    document.getElementById('content').innerHTML = data;

                    // Gọi lại setupModalEvents để nhận diện modal mới trong cars.ejs
                    setTimeout(setupModalEvents, 500);
                })
                .catch(error => {
                    document.getElementById('content').innerHTML = '<h1>Lỗi tải trang</h1>';
                });
        }
    });
});

function setupModalEvents() {
    console.log('Thiết lập sự kiện cho modal...');

    const modal1 = document.getElementById('modalForm1');
    const modal2 = document.getElementById('modalForm2');

    // Kiểm tra tồn tại modal
    if (!modal1 || !modal2) {
        console.error('Không tìm thấy form 1 hoặc form 2!');
        return;
    }

    // Hàm đóng tất cả modal
    function closeAllModals() {
        modal1.style.display = 'none';
        modal2.style.display = 'none';
    }

    // Nút mở và đóng form 1
    const btnOpen1 = document.querySelector('.openModal1');
    const btnClose1 = document.querySelector('.closeModal1');

    if (btnOpen1) {
        btnOpen1.onclick = function () {
            console.log('Mở Form 1');
            closeAllModals();
            modal1.style.display = 'flex';
        };
    }

    if (btnClose1) {
        btnClose1.onclick = function () {
            console.log('Đóng Form 1');
            modal1.style.display = 'none';
        };
    }

    // Nút mở và đóng form 2
    const btnOpen2 = document.querySelector('.openModal2');
    const btnClose2 = document.querySelector('.closeModal2');

    if (btnOpen2) {
        btnOpen2.onclick = function () {
            console.log('Mở Form 2');
            closeAllModals();
            modal2.style.display = 'flex';
        };
    }

    if (btnClose2) {
        btnClose2.onclick = function () {
            console.log('Đóng Form 2');
            modal2.style.display = 'none';
        };
    }

    // Đóng modal khi click ra ngoài
    window.addEventListener('click', function (event) {
        if (event.target === modal1) {
            console.log('Click bên ngoài Form 1');
            modal1.style.display = 'none';
        }
        if (event.target === modal2) {
            console.log('Click bên ngoài Form 2');
            modal2.style.display = 'none';
        }
    });
}

// Gọi hàm setup khi DOM hoàn thành
document.addEventListener('DOMContentLoaded', function () {
    setupModalEvents();
});




    
    
  </script>
</body>
</html>
